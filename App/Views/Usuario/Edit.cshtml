@model App.Models.Usuario

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    <div class="container">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-signin well">
            <h2>Edit</h2>
            <fieldset>
                <legend>Usuario</legend>
                <div class="form-group">
                    @Html.LabelFor(u => u.Email, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.Password, "Password", new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.PasswordSalt, "Confirm Password", new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.PasswordFor(u => u.PasswordSalt, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.PasswordSalt)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.Nombre, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(u => u.Nombre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Nombre)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.Apellido, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(u => u.Apellido, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Apellido)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.TelefonoFijo, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(u => u.TelefonoFijo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.TelefonoFijo)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.TelefonoCellular, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(u => u.TelefonoCellular, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.TelefonoCellular)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.Direccion, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(u => u.Direccion, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Direccion)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.Ciudad, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(u => u.Ciudad, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Ciudad)
                    </div>
                </div>

            </fieldset>
        </div>
        <p>
            <input class="btn btn-lg btn-danger btn-block" type="submit" value="Save" />
        </p>
    </div>
}
