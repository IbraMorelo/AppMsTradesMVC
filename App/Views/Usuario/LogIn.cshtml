@model App.Models.Usuario

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container">
        @Html.ValidationSummary(true, "Inicio de Sesión Fallido, Revise sus campos")

        <div class="form-signin well">
            <fieldset>
                <legend>Login Form</legend>
                <div class="form-group">
                    @Html.LabelFor(u => u.Email, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(u => u.Password, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-9">
                        @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>
                </div>
                <input class="btn btn-lg btn-danger pull-right" type="submit" value="Ingresar" />
            </fieldset>
        </div>
    </div>
}
